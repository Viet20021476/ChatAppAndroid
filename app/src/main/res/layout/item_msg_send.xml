<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_msg_send"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_msg_send"
        android:fontFamily="sans-serif-medium"
        android:padding="8dp"
        android:text="Đây là một dòng tin nhắn"
        android:textColor="#DFD2D2"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="23dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Đây là thời gian gửi"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="@id/tv_msg"
        app:layout_constraintTop_toBottomOf="@id/tv_msg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_imgMsg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_seen"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        app:layout_constraintLeft_toRightOf="@id/tv_msg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_msg" />

</androidx.constraintlayout.widget.ConstraintLayout>

